  <div style="width: 70%; " class="jumbotron m-3 mx-auto rounded-lg shadow-lg" style="background-color: #ffffff; margin-bottom: 40px;">
    <h2 class="display-4" style="text-align: center;">Your Assignments</h2>
    <hr style="width: 200px;margin: 0 auto;">
  <p style="text-align: center; margin-top: 15px;">You can view all the Assignments you created here.</p>


  <button style="margin-left: 410px; background-color: #548362; padding: 10px 10px;font-size: 16px;" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Create an Assignment
  </button>


    <div class="modal fade" id="exampleModalCenter" tabindex="-1" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Creating an Assignment</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/create-assignment/<%= classroom._id %>/<%= teacher_id %>" method="POST" enctype="multipart/form-data">
          <div class="modal-body">
              <div class="mb-3">
                <label for="recipient-name" class="col-form-label">Assignment Name</label>
                <input type="text" name="title" class="form-control" id="recipient-name">
                <input type="hidden" name="classroomID" value="<%= classroom._id %>">
              </div>
              <div class="mb-3">
                <label for="message-text" class="col-form-label">Instructions</label>
                <textarea class="form-control" name="instructions" id="message-text"></textarea>
              </div>
            <div style="margin-left: 1px;" class="row row-space">
              <div class="mb-3">
                <label for="message-text" class="col-form-label">Due date</label>
                <input type="date" class="form-control" name="dueDate" id="message-text">
              </div>
              <div  style="margin-left: 15px;"class="mb-3">
                <label for="message-text" class="col-form-label">Points</label>
                <input type="number" class="form-control" min="0" name="points" id="message-text">
              </div>
            </div>
              <div class="mb-3">
                <label for="message-text" class="col-form-label">Upload Assignment</label>
                <input type="file"  style="margin-bottom: 5px;" name="pdfLink" class="form-control" id="message-text">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Discard</button>
              <button type="submit" class="btn btn-primary">Create Assignment</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-md-12 qclass">
        <nav>
            <div class="nav justify-content-center nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active acolor" id="nav-home-tab" data-toggle="tab" href="#nav-home"
                    role="tab" aria-controls="nav-home" aria-selected="true">Assignments</a>
                <a class="nav-item nav-link pcolor" id="nav-profile-tab" data-toggle="tab" href="#nav-profile"
                    role="tab" aria-controls="nav-profile" aria-selected="false">Students</a>
            </div>
        </nav>
    </div>
</div>
<div class="tab-content" id="nav-tabContent">       
<div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
    <% if (classroom.assignments.length != 0) { %>
      <% classroom.assignments.forEach((element) => { %>
        <div style="margin: 15px 80px;"class="card">
            <div class="card-body">
                <div style="display: inline-block;">
                <h4 class="card-title"><%= element.title %></h4>
                </div>
                <form action="/viewSubmissions/<%= classroom._id %>/<%= element._id %>/<%= teacher_id %>" method="GET">
                  <div style="float: right;margin-top: -30px;">
                    <button style="margin-left: 710px; background-color: #548362; padding: 6px 40px;font-size: 16px;" type="submit" class="btn btn-primary">
                      View all Submissions
                    </button>
                  </div>
                </form>
                <br>
                <div style="display: inline-block;">
                <%= classroom.subject %>  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dot" viewBox="0 0 16 16">
                    <path d="M8 9.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
                  </svg>  Due Date: <%= element.dueDate.toLocaleString() %> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dot" viewBox="0 0 16 16">
                    <path d="M8 9.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
                  </svg><%= element.points %> points 
            </div>
            
            </div>
          </div> 
        <% }) %>
    <% } %>
</div>


<div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
   
    <table style="width: 75%; margin: 50px auto; "class="table table-striped">
        <thead>
          <tr>
            <!-- <th scope="col">#</th> -->
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email Id</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach((element) => { %>
            <tr>
            <!-- <th scope="row">1</th> -->
            <td><%= element.firstName %></td>
            <td><%= element.lastName %></td>
            <td><%= element.email %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
